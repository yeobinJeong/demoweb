		        function doDelete(boardNo, pageNo){
		        	yes = confirm(boardNo + '번 글을 삭제할까요 ?');
		        	if(yes){
		        		location.href = 'delete.action?boardno=' + boardNo + '&pageno='+ pageNo;
		        	}
		        }
	 </script>	
